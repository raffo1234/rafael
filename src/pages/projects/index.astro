---
import Dashboard from "../../layouts/Dashboard.astro";
import { supabase } from "../../lib/supabase";

let { data } = await supabase
  .from("user")
  .select("*")
  .order("created_at", { ascending: false });
---

<Dashboard pageTitle="Users">
  <div class="flex w-full">
    <section class="w-[280px] bg-neutral-200 p-5">
      <header class="mb-20">
        <div class="flex gap-2">
          <img
            src=""
            alt="Jhon Doe"
            class="w-11 h-11 rounded-full bg-neutral-700"
          />
          <div>
            <p class="text-sm leading-3">Welcome back</p>
            <h3 class="font-bold text-lg">Jhon Doe</h3>
          </div>
        </div>
      </header>
      <nav>
        <ul class="flex flex-col gap-2 text-sm">
          <li>
            <a
              href="/users"
              title="Users"
              class="hover:bg-white rounded-md block px-3 py-2">Users</a
            >
          </li>
          <li>
            <a
              href="/projects"
              title="Projects"
              class="hover:bg-white rounded-md block px-3 py-2">Projects</a
            >
          </li>
        </ul>
      </nav>
    </section>
    <main class="flex-grow bg-white min-h-lvh">
      <section class="max-w-lg w-full mx-auto py-6 px-4">
        <h1 class="text-2xl font-bebas-neue mb-6">Users</h1>

        <a
          href="/users/add"
          class="inline-block px-6 py-2 bg-blue-500 text-white rounded-md"
          >Add User
        </a>
        <section>
          {
            data?.map((user) => {
              return (
                <div>
                  <h1>Username: {user.username}</h1>
                  <p>Email: {user.email}</p>
                </div>
              );
            })
          }
        </section>
      </section>
    </main>
  </div>
</Dashboard>
