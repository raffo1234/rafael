---
import Layout from "../../layouts/Layout.astro";

import { supabase } from "../../lib/supabase";

let { data } = await supabase
  .from("user")
  .select("*")
  .order("created_at", { ascending: false });
---

<Layout pageTitle="Users">
  <section class="max-w-lg w-full mx-auto py-6 px-4">
    <h1 class="text-2xl font-bebas-neue mb-6">Users</h1>

    <a
      href="/users/add"
      class="inline-block px-6 py-2 bg-blue-500 text-white rounded-md"
      >Add User
    </a>
    <section>
      {
        data?.map((user) => {
          return (
            <div>
              <h1>Username: {user.username}</h1>
              <p>Email: {user.email}</p>
            </div>
          );
        })
      }
    </section>
  </section>
</Layout>
