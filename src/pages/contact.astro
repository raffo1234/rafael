---
import { Icon } from "astro-icon/components";
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";
import me from "../assets/rafael.png";
---

<Layout pageTitle="Get in touch">
  <a
    title="Volver al Home - Rafael Meza - Desarrollador Web"
    href="/"
    id="close-button-js"
    class="p-4 opacity-0 transition-all hover:-translate-x-2 duration-700 absolute flex items-center justify-center w-32 h-32 top-6 right-6"
  >
    <Icon name="material-symbols-light:arrow-back-rounded" size="64" />
  </a>
  <div
    transition:name="contact"
    class="max-w-[1250px] px-4 md:px-20 py-16 mx-auto h-full flex justify-center items-center relative w-full"
  >
    <div class="w-full">
      <div class="mb-6">
        <div class="flex items-center mb-6 space-x-5">
          <Icon
            name="material-symbols-light:award-star-rounded"
            size="96"
            class="text-green-800"
          />
          <h1
            class="font-bebas-neue text-green-800"
            style="font-size:clamp(18px, 4vw + 1rem, 60px)"
          >
            RAFAEL MEZA
          </h1>
        </div>
      </div>
      <div class="pl-[116px]">
        <div
          class="grid gap-4 w-full"
          style={{
            gridTemplateColumns: "repeat(auto-fit, minmax(140px, 1fr))",
          }}
        >
          <div
            class="overflow-hidden box-js opacity-0 translate-y-2 transition duration-700 ease-in-out aspect-square rounded-[30px] relative w-full items-center justify-between"
          >
            <Image
              src={me}
              class="absolute object-cover object-top w-full h-full"
              alt="Rafael Meza "
            />
            <p
              class="absolute text-white opacity-60 text-[40px] text-nowrap -mb-8 bottom-4 font-bebas-neue"
            >
              Available for work
            </p>
          </div>
          <a
            href="mailto:rafaelmezac@gmail.com"
            target="_blank"
            rel="noreferrer"
            title="Email | Rafael Meza | rafaelmezac@gmail.com"
            class="group text-orange hover:text-purple bg-purple hover:bg-orange text-xl box-js opacity-0 translate-y-2 transition duration-500 drop-shadow-xl hover:drop-shadow-2xl ease-in-out overflow-hidden aspect-square flex items-center justify-center rounded-[30px] relative w-full"
          >
            <span> EMAIL </span>
            <Icon
              name="material-symbols-light:mark-email-read-outline"
              size="48"
              class="text-orange group-hover:text-purple transition-colors duration-700 absolute left-2 bottom-2"
            />
            <Icon
              name="material-symbols-light:arrow-back-rounded"
              size="48"
              class="text-orange group-hover:text-purple transition-colors duration-700 ease-in-out absolute right-0 top-0 rotate-[135deg]"
            />
          </a>
          <a
            href="https://github.com/raffo1234"
            target="_blank"
            rel="noreferrer"
            title="Github | Rafael Meza | raffo1234"
            class="group text-orange hover:text-purple bg-purple hover:bg-orange text-xl box-js ease-in-out opacity-0 translate-y-2 transition duration-700 drop-shadow-xl hover:drop-shadow-2xl ease-in-out aspect-square rounded-[30px] relative w-full flex items-center justify-center overflow-hidden"
          >
            <span> GITHUB </span>
            <Icon
              name="material-symbols-light:code-blocks-outline"
              size="48"
              class="text-orange group-hover:text-purple transition-colors duration-700 absolute left-3 bottom-3"
            />
            <Icon
              name="material-symbols-light:arrow-back-rounded"
              size="48"
              class="text-orange group-hover:text-purple transition-colors duration-700 absolute right-0 top-0 rotate-[135deg]"
            />
          </a>
          <a
            href="https://wa.me/+51997258592"
            title="Whatsapp | Rafael Meza | +51 997258592"
            target="_blank"
            rel="noreferrer"
            class="group text-orange hover:text-purple bg-purple hover:bg-orange text-xl box-js opacity-0 translate-y-2 transition duration-700 drop-shadow-xl hover:drop-shadow-2xl ease-in-out aspect-square rounded-[30px] relative w-full flex items-center justify-center overflow-hidden"
          >
            <span> WHATSAPP </span>
            <Icon
              name="material-symbols-light:mark-unread-chat-alt-outline"
              size="48"
              class="text-orange group-hover:text-purple transition-colors duration-700 absolute left-3 bottom-3"
            />
            <Icon
              name="material-symbols-light:arrow-back-rounded"
              size="48"
              class="text-orange group-hover:text-purple transition-colors duration-700 absolute right-0 top-0 rotate-[135deg]"
            />
          </a>
        </div>
      </div>
    </div>
  </div>
</Layout>

<script is:inline>
  document.addEventListener("keyup", function (event) {
    if (event.key === "Escape") {
      window.location.href = "/";
    }
  });

  document.addEventListener("astro:page-load", () => {
    const closeButton = document.getElementById("close-button-js");
    if (!closeButton) return;

    const classes = ["!opacity-100", "!translate-y-0"];
    setTimeout(() => closeButton.classList.add(...classes), 1300);

    const boxes = document.querySelectorAll(".box-js");
    if (!boxes.length === 0) return;

    boxes.forEach((box, index) => {
      setTimeout(() => {
        box.classList.add(...classes);
      }, index * 300);
    });
  });
</script>
